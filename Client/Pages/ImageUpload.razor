@page "/imageupload"
@inject ImageService ImageService

<Title value="Image Upload" />

<h2>File Upload</h2>
<hr />
<div class="form-group row">
    <div class="col-md-6">
        <h5>@ImageService.Message</h5>
    </div>
</div>
<EditForm EditContext="ImageService.Context" OnValidSubmit="ImageService.Save">
    <DataAnnotationsValidator />
    <div class="form-group row">
        <div class="input-group input-group-sm col-md-6">
            <InputFile OnChange="ImageService.Read" class="form-control form-control-sm p-0" multiple accept="image/*" />
            <div class="input-group-append">
                <button type="submit" class="btn btn-sm btn-success">
                    <span class="oi oi-data-transfer-upload" aria-hidden="true"></span>
                </button>
            </div>
        </div>
        <div class="col-md-8">
            <ValidationMessage For="() => ImageService.Model.Picture" />
        </div>
    </div>
</EditForm>
<div class="form-group row">
    <div class="col-md-8">
        <p class="h6 mark text-info text-justify">
            Open the <b>JS In DotNet</b> tab and find a paragraph named <b>Call JS functions with IJSObjectReference</b> <ins>that will display all recorded files.</ins>
        </p>
    </div>
</div>
